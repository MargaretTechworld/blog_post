<%= form_for(resource, as: resource_name, url: session_path(resource_name),html: { style: 'max-width: 400px; margin: 0 auto; padding: 20px; border-radius: 5px;' }) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Username", style: 'width: 100%; padding: 10px; margin-bottom: 10px; border: 2px solid #000;' %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", style: 'width: 100%; padding: 10px; margin-bottom: 10px; border: 2px solid #000;' %>
  </div>
  <% if devise_mapping.rememberable? %>
    <div class="checkbox">
      <%= f.check_box :remember_me, class: "check" %>
      <%= f.label :remember_me, class: "remember" %>
      </div>
  <% end %>
  <div class="actions">
    <%= f.submit "Log in", style: 'width: 100%; padding: 10px; margin-bottom: 10px; background-color: white; box-shadow: 4px 3px 2px rgba(0, 0, 0, 30); border: 2px solid #000;' %>
    </div>
<% end %>

<div style="text-align: center; margin-top: 5px;">
  <%= render 'devise/shared/links' %>
</div>
