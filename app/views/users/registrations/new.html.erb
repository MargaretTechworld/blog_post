<div class="forms">
<div>
<h2>Sign up</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { style: 'max-width: 400px; margin: 0 auto; padding: 20px; border-radius: 5px;' }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
<div class="field">
  <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Name", style: 'width: 100%; padding: 10px; margin-bottom: 10px; border: 2px solid #000;' %>
</div>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", style: 'width: 100%; padding: 10px; margin-bottom: 10px; border: 2px solid #000;' %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password (6 characters minimum)", style: 'width: 100%; padding: 10px; margin-bottom: 10px; border: 2px solid #000;' %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password Confirmation", style: 'width: 100%; padding: 10px; margin-bottom: 10px; border: 2px solid #000;' %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" , style: 'width: 100%; padding: 10px; margin-bottom: 10px; background-color: white; box-shadow: 4px 3px 2px rgba(0, 0, 0, 30); border: 2px solid #000;' %>
  </div>
<% end %>
</div>
<div style="text-align: center; margin-top: 20px;">
  <%= render 'devise/shared/links' %>
</div>
</div>